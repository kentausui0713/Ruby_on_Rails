<!DOCTYPE html>
<html>
  <head>
    <title>SampleApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <h1 class = "headline">All-List</h1>
    </header>

    <div class = "nav-whole">
    <nav>
      <ul class = "nav-list">
        <li class = "nav-list-item">
          <%= link_to "Top", top_path %>
        </li>
        <li class = "nav-list-item">
          <%= link_to "TodoLists", "/todolists" %>
        </li>
        <li class = "nav-list-item">
          <%= link_to "New-List", todolists_new_path %>
        </li>

      </ul>
    </nav>
    </div>

    <main>
      <%= yield %>
    </main>
  </body>
</html>
